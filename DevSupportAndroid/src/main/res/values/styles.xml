<resources>

    <!-- Styles -->
    <attr name="widget_background" format="color"/>
    <attr name="content_background" format="color"/>
    <attr name="popup_background" format="color"/>
    <attr name="toolbarTitleColor" format="color"/>
    <attr name="ic_arrow_back" format="reference"/>
    <attr name="ic_menu" format="reference"/>
    <attr name="ic_keyboard_arrow_right" format="reference"/>
    <attr name="ic_file_download" format="reference"/>
    <attr name="ic_keyboard_arrow_up" format="reference"/>
    <attr name="ic_keyboard_arrow_down" format="reference"/>
    <attr name="ic_content_copy" format="reference"/>


    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="android:windowBackground">@color/grey_850</item>
        <item name="content_background">@color/grey_800</item>
        <item name="widget_background">@color/grey_825</item>
        <item name="colorPrimaryDark">@color/grey_825</item>
        <item name="colorPrimary">@color/grey_825</item>
        <item name="popup_background">@color/grey_700</item>
        <item name="colorAccent">@color/orange_a_700</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="ic_arrow_back">@drawable/ic_arrow_back_white_24dp</item>
        <item name="ic_menu">@drawable/ic_menu_white_24dp</item>
        <item name="ic_keyboard_arrow_right">@drawable/ic_keyboard_arrow_right_white_24dp</item>
        <item name="ic_file_download">@drawable/ic_file_download_white_24dp</item>
        <item name="ic_keyboard_arrow_up">@drawable/ic_keyboard_arrow_up_white_24dp</item>
        <item name="ic_keyboard_arrow_down">@drawable/ic_keyboard_arrow_down_white_24dp</item>
        <item name="ic_content_copy">@drawable/ic_content_copy_white_24dp</item>
        <item name="toolbarTitleColor">@color/white</item>
    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="widget_background">@color/grey_200</item>
        <item name="content_background">@color/white</item>
        <item name="popup_background">@color/white</item>
        <item name="android:windowBackground">@color/grey_100</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/grey_100</item>
        <item name="colorPrimary">@color/grey_100</item>
        <item name="colorAccent">@color/orange_a_700</item>
        <item name="ic_arrow_back">@drawable/ic_arrow_back_black_24dp</item>
        <item name="ic_menu">@drawable/ic_menu_black_24dp</item>
        <item name="ic_keyboard_arrow_right">@drawable/ic_keyboard_arrow_right_black_24dp</item>
        <item name="ic_file_download">@drawable/ic_file_download_black_24dp</item>
        <item name="ic_keyboard_arrow_up">@drawable/ic_keyboard_arrow_up_black_24dp</item>
        <item name="ic_keyboard_arrow_down">@drawable/ic_keyboard_arrow_down_black_24dp</item>
        <item name="ic_content_copy">@drawable/ic_content_copy_black_24dp</item>
        <item name="toolbarTitleColor">@color/black</item>
    </style>

    <style name="AppThemeLight.Colored">
        <item name="ic_arrow_back">@drawable/ic_arrow_back_white_24dp</item>
        <item name="ic_menu">@drawable/ic_menu_white_24dp</item>
        <item name="ic_keyboard_arrow_right">@drawable/ic_keyboard_arrow_right_white_24dp</item>
        <item name="ic_file_download">@drawable/ic_file_download_white_24dp</item>
        <item name="colorPrimaryDark">@color/red_700</item>
        <item name="colorAccent">@color/red_a_400</item>
        <item name="colorPrimary">@color/red_700</item>
        <item name="toolbarTitleColor">@color/white</item>
    </style>


    <style name="DialogSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="Touchable">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="TouchableForeground">
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
    </style>

    <style name="Icon.Shadow">
        <item name="android:layout_margin">16dp</item>
        <item name="ViewIcon_background">@color/focus_dark</item>
        <item name="android:layout_gravity">right|top</item>
    </style>

    <style name="Icon.Shadow.Back">
        <item name="android:id">@id/vBack</item>
        <item name="android:src">?ic_arrow_back</item>
        <item name="android:layout_gravity">left|top</item>
    </style>

    <style name="Icon.Toolbar">
        <item name="android:layout_gravity">right</item>
    </style>

    <style name="Icon.18">
        <item name="android:padding">9dp</item>
    </style>

    <style name="Icon.24">
        <item name="android:padding">12dp</item>
    </style>

    <style name="Icon.36">
        <item name="android:padding">18dp</item>
    </style>

    <style name="Root">
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="android:background">?android:windowBackground</item>
    </style>

    <style name="Toolbar">
        <item name="android:id">@id/vToolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:textColorPrimary">?toolbarTitleColor</item>
        <item name="android:textColorSecondary">?toolbarTitleColor</item>
        <item name="actionMenuTextColor">?toolbarTitleColor</item>
        <item name="layout_scrollFlags">scroll|enterAlways</item>
    </style>

    <style name="Toolbar.Collapse">
        <item name="layout_collapseMode">pin</item>
        <item name="android:background">@null</item>
    </style>

    <style name="Toolbar.NoScroll">
        <item name="layout_scrollFlags"></item>
    </style>

    <style name="AppBar">
        <item name="android:id">@id/vAppBar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="CollapsingToolbar">
        <item name="android:id">@id/vCollapsingToolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="expandedTitleMarginEnd">64dp</item>
        <item name="expandedTitleMarginStart">48dp</item>
        <item name="contentScrim">?colorPrimary</item>
        <item name="layout_scrollFlags">scroll|enterAlways|enterAlwaysCollapsed</item>
    </style>

    <style name="Fab">
        <item name="android:id">@id/vFab</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right|bottom</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="Widget.GifView" parent="@android:style/Widget"/>

    <style name="Divider">
        <item name="android:id">@id/vDivider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/focus</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="Divider.8">
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="Divider.16">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>

    <style name="Divider.24">
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
    </style>

    <style name="Recycler">
        <item name="android:id">@id/vRecycler</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>

    <style name="Pager">
        <item name="android:id">@id/vPager</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>

    <style name="Scroll">
        <item name="android:id">@id/vScroll</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>

    <style name="Scroll.Widget">
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
    </style>

    <style name="SwipeRefresh">
        <item name="android:id">@id/vRefresh</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>

    <style name="Chip">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="ViewChip_background">?colorAccent</item>
        <item name="ViewChip_size">28dp</item>
    </style>

    <style name="Chip.Button">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="ViewChip_size">42dp</item>
        <item name="ViewChip_textColor">@color/white</item>
        <item name="ViewChip_textStyle">bold</item>
    </style>

</resources>
