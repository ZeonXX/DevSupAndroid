<resources>

    <!-- Styles -->
    <attr name="widget_background" format="color"/>
    <attr name="content_background" format="color"/>
    <attr name="ic_arrow_back" format="reference"/>
    <attr name="ic_menu" format="reference"/>
    <attr name="ic_keyboard_arrow_right" format="reference"/>

    <style name="AppThemeDark" parent="Theme.AppCompat.NoActionBar">
        <item name="widget_background">@color/grey_750</item>
        <item name="content_background">@color/grey_800</item>
        <item name="textColorError">@color/red_700</item>
        <item name="android:windowBackground">@color/grey_850</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/grey_850</item>
        <item name="colorPrimary">@color/grey_850</item>
        <item name="colorAccent">@color/deep_orange_a_400</item>
        <item name="ic_arrow_back">@drawable/ic_arrow_back_white_24dp</item>
        <item name="ic_menu">@drawable/ic_menu_white_24dp</item>
        <item name="ic_keyboard_arrow_right">@drawable/ic_keyboard_arrow_right_white_24dp</item>
    </style>

    <style name="AppThemeLight" parent="Theme.AppCompat.Light.NoActionBar">
        <item name="widget_background">@color/grey_50</item>
        <item name="content_background">@color/grey_100</item>
        <item name="textColorError">@color/red_700</item>
        <item name="android:windowBackground">@color/white</item>
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
        <item name="colorPrimaryDark">@color/white</item>
        <item name="colorPrimary">@color/white</item>
        <item name="colorAccent">@color/deep_orange_a_400</item>
        <item name="ic_arrow_back">@drawable/ic_arrow_back_black_24dp</item>
        <item name="ic_menu">@drawable/ic_menu_black_24dp</item>
        <item name="ic_keyboard_arrow_right">@drawable/ic_keyboard_arrow_right_black_24dp</item>
    </style>


    <style name="DialogSheetAnimation">
        <item name="android:windowEnterAnimation">@anim/slide_up_dialog</item>
        <item name="android:windowExitAnimation">@anim/slide_out_down</item>
    </style>

    <style name="Touchable">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="TouchableForeground">
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:windowBackground">@android:color/black</item>
    </style>

    <style name="Icon.18">
        <item name="android:padding">9dp</item>
    </style>

    <style name="Toolbar">
        <item name="android:id">@id/toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?colorPrimary</item>
        <item name="android:textColorPrimary">@color/black</item>
        <item name="android:textColorSecondary">@color/black</item>
        <item name="actionMenuTextColor">@color/black</item>
    </style>

    <style name="AppBar">
        <item name="android:id">@id/app_bar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="elevation">0dp</item>
    </style>

    <style name="CollapsingToolbar">
        <item name="android:id">@id/collapsing_toolbar</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Fab">
        <item name="android:id">@id/fab</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_gravity">right|bottom</item>
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
        <item name="android:layout_marginTop">24dp</item>
        <item name="android:layout_marginBottom">24dp</item>
    </style>

    <style name="Widget.GifView" parent="@android:style/Widget"/>

    <style name="Divider">
        <item name="android:id">@id/divider</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">1dp</item>
        <item name="android:background">@color/focus</item>
        <item name="android:layout_gravity">bottom</item>
    </style>

    <style name="Divider.8">
        <item name="android:layout_marginRight">8dp</item>
        <item name="android:layout_marginLeft">8dp</item>
    </style>

    <style name="Divider.16">
        <item name="android:layout_marginRight">16dp</item>
        <item name="android:layout_marginLeft">16dp</item>
    </style>
    <style name="Divider.24">
        <item name="android:layout_marginRight">24dp</item>
        <item name="android:layout_marginLeft">24dp</item>
    </style>

    <style name="Recycler">
        <item name="android:id">@id/recycler</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">match_parent</item>
        <item name="layout_behavior">@string/appbar_scrolling_view_behavior</item>
    </style>

    <style name="ChipButton">
        <item name="android:id">@id/recycler</item>
        <item name="android:minWidth">128dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="ViewChip_size">42dp</item>
        <item name="ViewChip_textColor">@color/white</item>
        <item name="ViewChip_textGravity">center</item>
        <item name="ViewChip_textStyle">bold</item>
    </style>

</resources>
