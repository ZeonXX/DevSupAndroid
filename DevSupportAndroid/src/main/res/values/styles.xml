<resources>

    <!-- THEME -->

    <attr name="iconsFilter" format="color"/>
    <attr name="iconsFilterInverse" format="color"/>
    <attr name="contentBackground" format="color"/>


    <!-- Styles -->

    <style name="Touchable">
        <item name="android:background">?selectableItemBackground</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="TouchableForeground">
        <item name="android:foreground">?selectableItemBackground</item>
        <item name="android:focusable">true</item>
    </style>

    <style name="TouchableIcon">
        <item name="android:background">?selectableItemBackgroundBorderless</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="Icon">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:padding">12dp</item>
        <item name="android:windowBackground">@android:color/black</item>
        <item name="ViewIcon_filter">#01FF0000</item>
    </style>

    <style name="Icon.18">
        <item name="android:padding">9dp</item>
    </style>

    <style name="Icon.Filtered">
        <item name="ViewIcon_filter">?iconsFilter</item>
    </style>

    <style name="Icon.FilteredInverse">
        <item name="ViewIcon_filter">?iconsFilterInverse</item>
    </style>

    <style name="Toolbar">
        <item name="android:id">@id/toolbar</item>
        <item name="titleTextColor">@color/textLight_87</item>
        <item name="android:layout_width">match_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:background">?colorPrimary</item>
    </style>

    <style name="Widget.GifView" parent="@android:style/Widget"/>

</resources>
