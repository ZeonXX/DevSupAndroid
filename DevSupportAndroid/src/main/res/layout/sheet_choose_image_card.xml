<?xml version="1.0" encoding="utf-8"?>
<com.sup.dev.android.views.views.layouts.LayoutAspectRatio xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="60dp"
    android:layout_height="60dp"
    app:LayoutAspectRatio_h="1"
    app:LayoutAspectRatio_w="1">

    <ImageView
        android:id="@+id/vImage"
        style="@style/TouchableForeground"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <FrameLayout
        android:id="@+id/vNumContainerTouch"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content">

        <com.sup.dev.android.views.views.layouts.LayoutCorned
            android:id="@+id/vNumContainer"
            android:tag="teest"
            android:layout_gravity="right"
            android:layout_margin="8dp"
            android:layout_width="24dp"
            android:layout_height="24dp"
            app:LayoutCorned_circleMode="true">

            <TextView
                android:id="@+id/vNum"
                style="@style/TextAppearance.AppCompat.Caption"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="center"
                android:textColor="@color/white" />

        </com.sup.dev.android.views.views.layouts.LayoutCorned>




    </FrameLayout>


</com.sup.dev.android.views.views.layouts.LayoutAspectRatio>