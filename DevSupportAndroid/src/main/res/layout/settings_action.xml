<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/vTouch"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="?selectableItemBackground"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal">

        <com.sup.dev.android.views.views.ViewIcon
            android:id="@+id/vDevSupIcon"
            android:layout_width="38dp"
            android:layout_gravity="center"
            android:layout_height="38dp"
            android:layout_marginRight="16dp"
            android:src="@drawable/ic_clear_black_24dp"
            android:clickable="false"
            android:focusable="false"
            android:padding="4dp"/>

        <LinearLayout
            android:layout_weight="1"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_gravity="center"
            android:orientation="vertical">

            <TextView
                android:id="@+id/vDevSupTitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Repat callers"
                style="@style/Base.TextAppearance.AppCompat.Subhead"/>

            <TextView
                android:id="@+id/vDevSupSubtitle"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Ring when receiving a second call from the same number within 3 minutes"
                style="@style/Base.TextAppearance.AppCompat.Caption"/>

        </LinearLayout>

        <FrameLayout
            android:id="@+id/vDevSupContainer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="16dp"
            android:layout_gravity="center"/>

    </LinearLayout>

</FrameLayout>