<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:id="@+id/vDevSupRoot"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <com.sup.dev.android.views.views.ViewCircleImage
        android:id="@+id/vDevSupImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="?selectableItemBackgroundBorderless"/>

    <com.sup.dev.android.views.views.ViewChip
        android:id="@+id/vDevSupChip"
        style="@style/Chip"
        app:chipBackgroundColor="?colorAccent"
        android:textColor="@color/white"
        android:layout_gravity="right|bottom"/>

    <com.sup.dev.android.views.views.ViewDraw
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/vDevSupAvatarTouch"/>

</FrameLayout>