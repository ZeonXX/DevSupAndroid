<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
             xmlns:app="http://schemas.android.com/apk/res-auto"
             android:id="@+id/vDevSupRoot"
             android:layout_width="match_parent"
             android:layout_height="match_parent">

    <com.sup.dev.android.views.views.ViewCircleImage
        android:id="@+id/vDevSupImage"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:background="?selectableItemBackgroundBorderless"/>

    <FrameLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="end|bottom">

        <com.sup.dev.android.views.views.ViewChipMini
            android:id="@+id/vDevSupChip"
            style="@style/ChipMini"/>

        <com.sup.dev.android.views.views.ViewCircleImage
            android:id="@+id/vDevSupChipIcon"
            app:ViewCircleImage_circleBackgroundColor="?colorAccent"
            android:layout_width="18dp"
            android:layout_height="18dp" />

    </FrameLayout>

    <com.sup.dev.android.views.views.ViewDraw
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/vDevSupAvatarTouch"/>

</FrameLayout>