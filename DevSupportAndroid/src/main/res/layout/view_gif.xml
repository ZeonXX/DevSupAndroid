<?xml version="1.0" encoding="utf-8"?>
<com.sup.dev.android.views.views.layouts.LayoutAspectRatio
    xmlns:android="http://schemas.android.com/apk/res/android"
             android:layout_width="wrap_content"
             android:layout_height="wrap_content">

    <com.sup.dev.android.views.views.ViewGif
        android:id="@+id/view_gif_gif"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

    <ImageView
        android:id="@+id/view_gif_image"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:adjustViewBounds="true"
        android:scaleType="fitCenter"/>

    <ProgressBar
        android:id="@+id/view_gif_progress"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <View
        android:id="@+id/view_gif_fade"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:background="#60000000"/>

    <com.sup.dev.android.views.views.ViewIcon
        android:id="@+id/view_gif_icon"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_gravity="center"/>

    <FrameLayout
        android:id="@+id/view_gif_touch"
        style="@style/Touchable"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>


</com.sup.dev.android.views.views.layouts.LayoutAspectRatio>