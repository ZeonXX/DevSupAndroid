<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:paddingRight="6dp"
    android:paddingLeft="6dp"
    android:paddingTop="8dp">

    <com.sup.dev.android.views.widgets.ViewIcon
        android:id="@+id/dev_sup_icon"
        android:layout_width="24dp"
        android:layout_height="24dp"
        android:layout_marginRight="16dp"
        android:layout_marginTop="8dp"
        android:src="@drawable/ic_clear_white_24dp"/>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <android.support.design.widget.TextInputLayout
            android:id="@+id/dev_sup_input_layout"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:hintAnimationEnabled="false">

            <com.sup.dev.android.views.widgets.ViewErrorEditText
                android:id="@+id/dev_sup_field"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:focusable="true"
                android:text="Enter your settings parameter"/>


        </android.support.design.widget.TextInputLayout>

    </LinearLayout>

</LinearLayout>
