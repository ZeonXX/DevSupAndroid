<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.sup.dev.android.views.views.layouts.LayoutMaxSizes
        android:id="@+id/vLayoutMaxSize"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_gravity="bottom"
        app:LayoutMaxSizes_allowChildMaxW="true"
        app:LayoutMaxSizes_childAlwaysMaxW="true"
        app:LayoutMaxSizes_useScreenHeightAsParent="true"
        app:LayoutMaxSizes_maxHeightParentPercent="50">

        <com.sup.dev.android.views.views.layouts.LayoutCorned
            android:id="@+id/vContainer"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/widget_background"/>

    </com.sup.dev.android.views.views.layouts.LayoutMaxSizes>

</FrameLayout>