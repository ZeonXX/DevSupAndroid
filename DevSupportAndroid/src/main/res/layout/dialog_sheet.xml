<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <com.sup.dev.android.views.views.layouts.LayoutMaxSizes
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:LayoutMaxSizes_allowChildMaxW="true"
        app:LayoutMaxSizes_childAlwaysMaxW="true"
        app:LayoutMaxSizes_maxHeight="480dp"
        android:layout_gravity="bottom">

        <com.sup.dev.android.views.views.layouts.LayoutCorned
            android:id="@+id/vCorned"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="?attr/widget_background"
            android:layout_gravity="bottom">

            <FrameLayout
                android:id="@+id/vContainer"
                android:layout_width="match_parent"
                android:layout_height="wrap_content">
            </FrameLayout>

        </com.sup.dev.android.views.views.layouts.LayoutCorned>

    </com.sup.dev.android.views.views.layouts.LayoutMaxSizes>

</FrameLayout>