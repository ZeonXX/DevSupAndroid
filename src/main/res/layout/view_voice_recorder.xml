<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">

    <FrameLayout
        android:id="@+id/vIconContainer"
        android:layout_width="162dp"
        android:layout_height="162dp"
        android:layout_gravity="right|bottom"
        android:layout_marginRight="4dp"
        android:layout_marginBottom="4dp">

        <com.sup.dev.android.views.views.ViewIcon
            android:id="@+id/vIconBig"
            android:layout_width="72dp"
            android:layout_height="72dp"
            android:layout_gravity="right|bottom"
            android:padding="22dp"
            android:src="@drawable/ic_mic_white_24dp"
            app:ViewIcon_background="@color/green_500" />

        <com.sup.dev.android.views.views.ViewIcon
            android:id="@+id/vIconStop"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="66dp"
            android:layout_marginBottom="2dp"
            android:padding="20dp"
            android:src="@drawable/ic_clear_white_24dp"
            app:ViewIcon_background="@color/red_500" />

        <com.sup.dev.android.views.views.ViewIcon
            android:id="@+id/vIconLock"
            style="@style/Icon"
            android:layout_width="64dp"
            android:layout_height="64dp"
            android:layout_gravity="right|bottom"
            android:layout_marginRight="2dp"
            android:layout_marginBottom="66dp"
            android:padding="20dp"
            android:src="@drawable/ic_lock_white_24dp"
            app:ViewIcon_background="@color/blue_500" />

    </FrameLayout>

    <ImageView
        android:id="@+id/vIcon"
        style="@style/Icon"
        android:layout_gravity="bottom|right"
        android:src="?ic_mic_24dp" />

</FrameLayout>