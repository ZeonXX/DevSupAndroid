<?xml version="1.0" encoding="utf-8"?>
<com.sup.dev.android.views.views.layouts.LayoutFrameMeasureCallback
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/vActivityRoot"
    android:layout_width="match_parent"
    android:background="?window_background"
    android:layout_height="match_parent">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <FrameLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_weight="1">

            <FrameLayout
                android:id="@+id/vScreenActivityView"
                android:layout_width="match_parent"
                android:layout_height="match_parent"/>

            <FrameLayout
                android:id="@+id/vScreenActivityTouchLock"
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:clickable="true"
                android:focusable="true"/>
        </FrameLayout>

        <com.sup.dev.android.views.views.layouts.LayoutNavigationClipped
            android:id="@+id/vScreenActivityBottomNavigationContainer"
            android:layout_marginTop="-74dp"
            android:layout_width="match_parent"
            android:layout_height="86dp"/>

    </LinearLayout>

    <com.sup.dev.android.views.views.draw_animations.ViewDrawAnimations
        android:id="@+id/vActivityDrawAnimations"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />

    <FrameLayout
        android:id="@+id/vSheetContainer"
        android:layout_width="match_parent"
        android:layout_height="match_parent"/>

</com.sup.dev.android.views.views.layouts.LayoutFrameMeasureCallback>
